            <lb/><expan>ledit</expan><persName>texier</persName><add hand="#MainLDA" place="bottom"><metamark>⁁</metamark></add><add hand="#MainLDA" place="top"><metamark>⁁</metamark><choice><orig>enuers</orig><reg>envers</reg></choice><expan>ledit</expan><persName>guiot</persName></add> aux despens consernant <expan>ladite</expan><lb/>peremption <sic>distance</sic> faictz tant <expan>par</expan><choice><orig>deuant</orig><reg>devant</reg></choice><lb/><expan>lesdits</expan><expan>presidiaulx</expan><expan>que</expan> en <expan>ladite</expan><expan>court</expan> La taxe
